{
  "compilerOptions": {
    "outDir": ".",
    "target": "es6",
    "lib": [
      "es6",
      "es2016.array.include",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "exclude": [
    "coverage",
    "node_modules",
    "**/__tests__/*"
  ]
}
