{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es6",
      "es2016.array.include",
      "es2017",
      "dom"
    ],
    "module": "umd",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": ".",
    "target": "es5"
  },
  "exclude": [
    "coverage",
    "node_modules",
    "**/__tests__/*"
  ]
}
